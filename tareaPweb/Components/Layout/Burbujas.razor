<section>
    <div class="bubles">
        @for (int i = 0; i < 27; i++)
        {
            <span style="@($"--i: {GetBubbleIndex(i)}")"></span>
        }
    </div>
</section>

@code {
    private int GetBubbleIndex(int index)
    {
        // Define the bubble indices as per your original array
        int[] indices = new int[] { 11, 12, 24, 14, 23, 18, 16, 19, 20, 22, 25, 21, 15, 13, 26, 17, 13, 28,
11, 12, 24, 14, 23, 18, 16, 19, 20, 22, 25, 21, 21, 19 };

        // Return the corresponding index value; if index is out of range, return 0 or any default value
        return index < indices.Length ? indices[index] : 0;
    }
}
